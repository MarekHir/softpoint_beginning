.alert.alert-danger
  = flash[:error]
  = @user.errors.full_messages

= form_for @user do |form|
  .mb-3
  = form.label :first_name, 'Meno', class: 'form-label'
  = form.text_field :first_name, class: 'form-control'
  = form.label :last_name, 'Priezvisko', class: 'form-label'
  = form.text_field :last_name, class: 'form-control'
  = form.label :organization_id, 'Organizacia', class: 'form-label'
  = form.select :organization_id, options_for_select(Organization.all.map{|o| [o.name, o.id] }), {}, { class: 'form-select form-select-lg mb-3' }
  = form.submit class: 'btn btn-outline-success'


= link_to "Back to lists", users_path, class: 'btn btn-dark'